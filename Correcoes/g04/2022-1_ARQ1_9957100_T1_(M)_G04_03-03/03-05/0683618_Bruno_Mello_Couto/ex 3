a) f (x,y,z)= ∑ m ( 2, 4, 6, 7 )

   #m     x y z      minitermos          Sop(2,4,6,7)
    0     0 0 0      x'.y'.z'                 0
    1     0 0 1      x'.y'.z                  0
    2     0 1 0      x'.y.z' =m0              1
    3     0 1 1      x'.y.z                   0
    4     1 0 0      x.y'.z = m2              1 
    5     1 0 1      x.y'.z                   0
    6     1 1 0      x.y.z'  =m3              1
    7     1 1 1      x.y.z   =m4              1
    
    SoP(2,4,6,7)=1
    
    
 b) f (x,y,z)= ∑ m ( 1, 3, 4, 7 ) 
 
   #m     x y z      minitermos          Sop(1,3,4,7)
    0     0 0 0      x'.y'.z'                 0
    1     0 0 1      x'.y'.z =m1              4
    2     0 1 0      x'.y.z'                  0
    3     0 1 1      x'.y.z  =m2              1
    4     1 0 0      x.y'.z = m3              1 
    5     1 0 1      x.y'.z                   0
    6     1 1 0      x.y.z'                   1
    7     1 1 1      x.y.z   =m4              1
    
    SoP(1,3,4,7)=1
    
